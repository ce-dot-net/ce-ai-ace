{
  "name": "ace-orchestration",
  "version": "2.3.6",
  "description": "ACE (Agentic Context Engineering) - Automatic pattern learning through reflection and deterministic curation. Based on Stanford/SambaNova/UC Berkeley research (arXiv:2510.04618v1)",
  "author": {
    "name": "ACE Team",
    "email": "ace@ce-dot-net.com"
  },
  "homepage": "https://github.com/ce-dot-net/ce-ai-ace",
  "repository": "https://github.com/ce-dot-net/ce-ai-ace",
  "license": "MIT",
  "keywords": [
    "claude-code",
    "ace",
    "pattern-learning",
    "self-improving",
    "context-engineering",
    "agentic",
    "research",
    "stanford",
    "autonomous"
  ],
  "hooks": "./hooks/hooks.json",
  "commands": "./commands",
  "agents": "./agents",
  "mcpServers": {
    "chromadb-ace": {
      "command": "uvx",
      "args": ["chroma-mcp"],
      "env": {
        "CHROMA_DB_PATH": "${CLAUDE_PLUGIN_ROOT}/.ace-memory/chromadb"
      }
    },
    "serena-ace": {
      "command": "uvx",
      "args": ["--from", "mcp-serena", "mcp-serena"],
      "env": {
        "SERENA_PROJECT_ROOT": "${CLAUDE_PLUGIN_ROOT}/../..",
        "SERENA_CONFIG_PATH": "${CLAUDE_PLUGIN_ROOT}/../../.serena/project.yml"
      }
    }
  }
}
