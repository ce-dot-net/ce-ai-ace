{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/check-mcp-conflicts.py"
          }
        ]
      }
    ],
    "AgentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from chroma-mcp --with chromadb python3 ${CLAUDE_PLUGIN_ROOT}/scripts/inject-playbook.py"
          }
        ]
      }
    ],
    "AgentEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from chroma-mcp --with chromadb --with sentence-transformers --with scikit-learn python3 ${CLAUDE_PLUGIN_ROOT}/scripts/analyze-agent-output.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from chroma-mcp --with chromadb python3 ${CLAUDE_PLUGIN_ROOT}/scripts/validate-patterns.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from chroma-mcp --with chromadb --with sentence-transformers --with scikit-learn python3 ${CLAUDE_PLUGIN_ROOT}/scripts/ace-cycle.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from chroma-mcp --with chromadb python3 ${CLAUDE_PLUGIN_ROOT}/scripts/ace-session-end.py"
          }
        ]
      }
    ],
    "PostTaskCompletion": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/PostTaskCompletion.sh"
          }
        ]
      }
    ]
  }
}
