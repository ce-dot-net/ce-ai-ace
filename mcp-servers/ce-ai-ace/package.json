    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ace",
    "agentic-context-engineering",
    "pattern-learning",
    "llm",
    "context-optimization",
    "claude-code",
    "cursor",
    "cline",
    "self-improving",
    "reflector",
    "curator",
    "playbook",
    "stanford-research"
  ],
  "author": {
    "name": "CE.NET",
    "email": "ace@ce-dot-net.com",
    "url": "https://github.com/ce-dot-net"
  },
  "homepage": "https://github.com/ce-dot-net/ce-ai-ace#readme",
  "bugs": {
    "url": "https://github.com/ce-dot-net/ce-ai-ace/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.2",
